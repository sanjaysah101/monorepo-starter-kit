{
  "name": "@monorepo/types",
  "version": "0.0.0",
  "description": "Shared TypeScript type definitions for the monorepo platform",
  "keywords": [
    "typescript",
    "types",
    "monorepo"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsup src/index.ts --format esm --dts",
    "publish-packages": "turbo run build lint && changeset version && changeset publish"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@monorepo/typescript-config": "workspace:*",
    "tsup": "8.5.0",
    "typescript": "5.9.2"
  },
  "files": [
    "dist",
    "README.md",
    "package.json",
    "CHANGELOG.md"
  ]
}
